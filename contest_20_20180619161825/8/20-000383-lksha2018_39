#include <iostream>
using namespace std;
 
int main() {
	int d1,d2,d3,d4,d5,d6,a,b,c,q,w,d12,d123,d1234,d12345,d123456;
	cin>>a>>b>>c;
	
d1=a+b+c;
d2=a*b*c;
d3=a+b*c;
d4=a*b+c;
q=a+b;
d5=q*c;
w=b+c;
d6=a*w;
if(d1>=d2){d2=0;}
else{d1=0;}
 d12=d1+d2;
if(d12>=d3){d3=0;}
else{d12=0;}
 d123=d12+d3;
if(d123>=d4){d4=0;}
else{d123=0;}
 d1234=d123+d4;
if(d1234>=d5){d5=0;}
else{d1234=0;}
 d12345=d1234+d5;
if(d12345>=d6){d6=0;}
else{d12345=0;}
 d123456=d12345+d6;
cout<<d123456;

    	return 0;
}